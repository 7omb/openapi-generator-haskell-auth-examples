library
    hs-source-dirs:   lib
    exposed-modules:  Lib
    build-depends:    base,
                      servant,
                      wai,
                      wai-extra,
                      bytestring,
                      containers,
                      text,
                      servant-server
    default-language: Haskell2010

executable noauth-server
    hs-source-dirs:   app
    main-is:          Noauth.hs
    build-depends:
        base,
        servant,
        servant-server,
        noauth-spec,
        openapi-test-server
    default-language: Haskell2010

executable apikey-server
    hs-source-dirs:   app
    main-is:          Apikey.hs
    build-depends:
        base,
        servant,
        servant-server,
        apikey-spec,
        openapi-test-server
    default-language: Haskell2010

executable basic-server
    hs-source-dirs:   app
    main-is:          Basic.hs
    build-depends:
        base,
        servant,
        servant-server,
        basic-spec,
        openapi-test-server
    default-language: Haskell2010

executable bearer-server
    hs-source-dirs:   app
    main-is:          Bearer.hs
    build-depends:
        base,
        servant,
        servant-server,
        bearer-spec,
        openapi-test-server
    default-language: Haskell2010

executable custom-monad-server
    hs-source-dirs:   app
    main-is:          CustomMonad.hs
    build-depends:
        base,
        mtl,
        servant,
        servant-server,
        custom-monad-spec,
        openapi-test-server,
        text
    default-language: Haskell2010

executable apikey-custom-monad-server
    hs-source-dirs:   app
    main-is:          ApikeyCustomMonad.hs
    build-depends:
        base,
        mtl,
        servant,
        servant-server,
        apikey-custom-monad-spec,
        openapi-test-server,
        text
    default-language: Haskell2010

test-suite openapi-test-server-test
    hs-source-dirs:   test
    main-is:          LibTest.hs
    build-depends:    base
    type:             exitcode-stdio-1.0
    default-language: Haskell2010
